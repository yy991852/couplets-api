{
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/health", "destination": "/routes/health.js" },
    { "source": "/routes/couplets", "destination": "/routes/couplets.js" },
    { "source": "/routes/couplets/:id", "destination": "/routes/couplets.js" },
    { "source": "/routes/search", "destination": "/routes/search.js" },
    { "source": "/routes/categories", "destination": "/routes/categories.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ]
}